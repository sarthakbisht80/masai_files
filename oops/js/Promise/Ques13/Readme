// es6FeaturesTask.js

// Initial product list
const products = [
  { id: 1, name: "Laptop", price: 60000, category: "Electronics" },
  { id: 2, name: "Shoes", price: 2000, category: "Fashion" },
  { id: 3, name: "Phone", price: 40000, category: "Electronics" }
];

// âœ… 1. Array destructuring - extract first two products
const [firstProduct, secondProduct] = products;
console.log("First Product:", firstProduct);
console.log("Second Product:", secondProduct);

// âœ… 2. Function to add new product with default parameters & spread operator
function addProduct(
  name = "Unnamed Product",
  price = 1000,
  category = "General"
) {
  const newProduct = {
    id: products.length + 1,
    name,
    price,
    category
  };

  // Using spread operator to add new product
  products.push(newProduct);
  return newProduct;
}

// âœ… 3. Function to get products by multiple categories using rest parameter
function getProductsByCategory(...categories) {
  return products.filter((product) => categories.includes(product.category));
}

// âœ… 4. Function to print product summary using template literals
function printProducts(list) {
  list.forEach(({ name, price, category }) => {
    console.log(`Product: ${name} | Price: ${price} | Category: ${category}`);
  });
}

// --- Program Flow ---

// Add a new product
addProduct("Watch", 5000, "Fashion");

// Filter products by category
const electronicsAndFashion = getProductsByCategory("Electronics", "Fashion");

// Print full updated product list
console.log("\nðŸ“¦ Full Updated Product List:");
printProducts(products);

console.log("\nðŸŽ¯ Filtered Products (Electronics & Fashion):");
printProducts(electronicsAndFashion);
